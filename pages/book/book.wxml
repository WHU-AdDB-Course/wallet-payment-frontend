<scroll-view scroll-y="true" style="height: 1331rpx; width: 750rpx; display: block; box-sizing: border-box; position: relative; left: 0rpx; top: 87rpx">
  <view class='page-body' wx:for="{{list}}" wx:key="id"  enable-flex="true" >
    <navigator url="/pages/item/item?title={{item.name}}&pictureUrl={{item.pictureUrl}}&url={{item.url}}&message={{item.message}}&id={{title}}">
      <view class='item' >
        <image class='poster' src='{{item.pictureUrl}}'></image>
        <view class='meta'>
          <text class='title'>{{item.name}}</text>
        </view>
      </view>
    </navigator>
  </view>
</scroll-view>
